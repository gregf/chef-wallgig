{
  "name": "base",
  "description": "The base role that for all the nodes",
  "json_class": "Chef::Role",
  "default_attributes": {
    "logwatch": {
      "mailto": "greg@gregf.org"
    },
    "locale": {
      "lang": "en_US.utf8"
    },
    "resolver": {
      "search": "wallgig.net",
      "nameservers": [
        "8.8.8.8",
        "8.8.4.4"
      ]
    },
    "ntp": {
      "is_server": false,
      "server": [
        "0.pool.ntp.org",
        "1.pool.ntp.org",
        "2.pool.ntp.org",
        "3.pool.ntp.org"
      ]
    },
    "chef_client": {
      "interval": 1800,
      "init_style": "none",
      "cron": {
        "minute": "0",
        "hour": "*"
      }
    },
    "openssh": {
      "server": {
        "password_authentication": "no",
        "permit_root_login": "no",
        "subsystem": "sftp internal-sftp"
      }
    },
    "postfix": {
      "aliases": {
        "root": "greg@gregf.org"
      }
    }
  },
  "override_attributes": {},
  "chef_type": "role",
  "run_list": [
    "recipe[apt]",
    "recipe[openssh]",
    "recipe[ntp]"
  ],
  "env_run_lists": {}
}
