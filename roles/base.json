{
  "name": "base",
  "description": "The base role that for all the nodes",
  "json_class": "Chef::Role",
  "default_attributes": {
    "sanitize": {
      "iptables": false,
      "install_packages": [
        "htop",
        "most",
        "whois",
        "traceroute",
        "lsof",
        "elinks",
        "lynx",
        "netcat-openbsd",
        "mtr",
        "strace",
        "curl",
        "wget",
        "man",
        "sysstat"
      ]
    },
    "omnibus_updater": {
      "version": "11.12.2-1"
    },
    "resolver": {
      "search": "wallgig.net",
      "nameservers": ["8.8.8.8", "8.8.4.4"]
    },
    "ntp": {
      "is_server": false,
      "servers": [
        "0.pool.ntp.org",
        "1.pool.ntp.org",
        "2.pool.ntp.org",
        "3.pool.ntp.org"
      ]
    },
    "chef_client": {
      "interval": 1800,
      "use_cron_d": true,
      "client_fork": true,
      "init_style": "none",
      "cron": {
        "minute": "0",
        "hour": "*"
      }
    }
  },
  "override_attributes": {},
  "chef_type": "role",
  "run_list": [
    "recipe[hostname]",
    "recipe[wallgig::hostsfile]",
    "recipe[chef-client::cron]",
    "recipe[chef-client::delete_validation]",
    "recipe[client-rekey::default]",
    "recipe[wallgig::chef-handler]",
    "recipe[apticron]",
    "recipe[apt]",
    "recipe[wallgig::users]",
    "recipe[ntp]",
    "recipe[omnibus_updater]",
    "recipe[motd]",
    "recipe[sanitize]",
    "recipe[smartmontools]",
    "recipe[sysstat]"
  ]
}
